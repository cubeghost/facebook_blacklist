{
  "name": "Blacklist for Facebook",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Hide the posts you don't want to see - before you even see them.",
  "homepage_url": "http://bldwn.co/blacklist/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://*.facebook.com/*",
    "webNavigation",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}